{
    "git": {
        "commitMessage": "chore: release v${version}",
        "tagName": "v${version}",
        "push": true,
        "requireCleanWorkingDir": false,
        "requireBranch": "main"
    },
    "npm": {
        "publish": true,
        "publishArgs": [
            "--access",
            "public"
        ]
    },
    "github": {
        "release": true,
        "releaseName": "v${version}",
        "preRelease": "auto"
    },
    "hooks": {
        "before:init": [
            "npm run typescript"
        ],
        "after:bump": "echo Successfully bumped version to ${version}",
        "after:release": "echo Successfully released ${name} v${version} to npm and GitHub!"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": {
                "name": "conventionalcommits"
            },
            "infile": "CHANGELOG.md"
        }
    }
}