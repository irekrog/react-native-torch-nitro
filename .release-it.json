{
    "git": {
        "commitMessage": "chore: release v${version}",
        "tagName": "v${version}",
        "push": true,
        "requireCleanWorkingDir": false,
        "requireBranch": "main"
    },
    "npm": {
        "publish": true,
        "publishArgs": [
            "--access",
            "public"
        ]
    },
    "github": {
        "release": true,
        "releaseName": "v${version}",
        "preRelease": "auto"
    },
    "hooks": {
        "before:init": [
            "npm run typescript"
        ],
        "after:bump": "echo Successfully bumped version to ${version}",
        "after:release": "echo Successfully released ${name} v${version} to npm and GitHub!"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": {
                "name": "conventionalcommits",
                "types": [
                    {
                        "type": "feat",
                        "section": "‚ú® Features"
                    },
                    {
                        "type": "fix",
                        "section": "üêõ Bug Fixes"
                    },
                    {
                        "type": "perf",
                        "section": "‚ö° Performance Improvements"
                    },
                    {
                        "type": "docs",
                        "section": "üìù Documentation"
                    },
                    {
                        "type": "style",
                        "section": "üíÑ Styles"
                    },
                    {
                        "type": "refactor",
                        "section": "‚ôªÔ∏è Code Refactoring"
                    },
                    {
                        "type": "test",
                        "section": "‚úÖ Tests"
                    },
                    {
                        "type": "build",
                        "section": "üèóÔ∏è Build System"
                    },
                    {
                        "type": "ci",
                        "section": "üë∑ CI/CD"
                    },
                    {
                        "type": "chore",
                        "section": "üîß Chores"
                    }
                ]
            },
            "infile": "CHANGELOG.md"
        }
    }
}